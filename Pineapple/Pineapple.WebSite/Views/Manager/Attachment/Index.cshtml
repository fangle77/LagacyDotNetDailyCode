@{
    ViewBag.Title = "Attachment";
}

@RenderPage("Upload.cshtml");

<div id="attachmentContainer">
    @foreach (var attachment in @ViewBag.Attachments)
    {
        if (attachment.IsImage)
        {
        <a href="@attachment.UrlPath" title="@attachment.OriginName" class="img-gallry">
            <img data-original="@attachment.UrlPath" alt="@attachment.Alt" src="" style="width:160px;" class="img-rounded" attachmentId="@attachment.AttachmentId"/>
        </a>
        <div class="hide img-operation">
            <a href="javascript:void(0);">Copy Element</a>
            <a href="javascript:void(0);">Copy Url</a>
            <a href="/Manager/Attachment/Delete/@attachment.AttachmentId" class="glyphicon glyphicon-minus-sign">Delete</a>
        </div>
        }
        else
        {
        <span class="col-md-2">
            <a attachmentId="@attachment.AttachmentId" href="@attachment.UrlPath">@attachment.OriginName  (@attachment.Size)</a>
            <br/>
            <a href="/Manager/Attachment/Delete/@attachment.AttachmentId" class="glyphicon glyphicon-minus-sign">Delete</a>
        </span>
        }
    }
</div>
