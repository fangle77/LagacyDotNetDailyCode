@{
    var catalogView = @ViewBag.CatalogView;
    var catalog = catalogView.Catalog;
    var action = catalogView.IsEmpty ? "/Manager/Catalog/Create" : "/Manager/Catalog/Edit/" + catalog.CatalogId;
    var catalogId = catalogView.IsEmpty ? "" : catalog.CatalogId.ToString();
}
<form id="form1" class="form-horizontal" role="form"  action="@action" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">CatalogId:</label>
        <div class="col-sm-10">
            <span>@catalogId</span>
            <input type="hidden" name="CatalogId" value="@catalogId"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">CatalogCode:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="CatalogCode" value="@catalog.CatalogCode" placeholder="input Catalog Code..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">CatalogName:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="CatalogName" value="@catalog.CatalogName"  placeholder="input Catalog Name..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Title:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="Title" value="@catalog.Title"  placeholder="input Title..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">ContentType:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="ContentType" value="@catalog.ContentType"  placeholder="input ContentType..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Keywords:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="Keywords" value="@catalog.Keywords"  placeholder="input Keywords..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Description:</label>
        <div class="col-sm-10">
            <textarea rows="5" cols="" class="col-sm-10 form-control" name="Description" placeholder="input Description...">@catalog.Description</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">ICP:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="ICP" value="@catalog.ICP"  placeholder="input ICP..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Icon:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="Icon" value="@catalog.Icon"  placeholder="input Icon..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Logo:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="Logo" value="@catalog.Logo"  placeholder="input Logo..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">CopyrightTime:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="CopyrightTime" value="@catalog.CopyrightTime"  placeholder="input Copyright Time..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Copyright:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="Copyright" value="@catalog.Copyright"  placeholder="input Copyright..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
