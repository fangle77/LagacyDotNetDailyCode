@model Pineapple.Model.CaseItem
<div class="panel panel-default">
	<input type="hidden" name = "CaseItemId" value = "Model.CaseItemId"/>
	<div class="panel-heading">
		<div class="col-sm-offset-3">
		   <a href="javascript:void(0);" class="glyphicon glyphicon-save case-item-save">Save</a>
	       <a href="javascript:void(0);" class="glyphicon glyphicon-minus-sign case-item-delete">Delete</a>
       </div>
	</div>
	<div class="panel-body">
		<div class="form-group">
	     <label class="col-sm-2 control-label">Title:</label>
	     <div class="col-sm-10">
	         <input type="text" class="col-sm-10 form-control" name="Title" value="Model.Title"  placeholder="input Title..." />
	     </div>
	    </div>
	
		<div class="form-group">
	    <label class="col-sm-2 control-label">Attachment:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="AttachmentId" value="Model.Attachment"  placeholder="input Attachment..." />
	    </div>
	    </div>
	
		<div class="form-group">
	    <label class="col-sm-2 control-label">DisplayOrder:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="DisplayOrder" value="Model.DisplayOrder"  placeholder="input DisplayOrder..." />
	    </div>
	    </div>
	    
	    <div class="form-group">
	    <label class="col-sm-2 control-label">CreateDate:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="CreateDate" value="Model.CreateDate"  placeholder="input CreateDate..." />
	    </div>
	    </div>
	</div>
</div>