@{
    ViewBag.Title = "Edit case items";
}
<a href="/Manager/Cases/Edit/@ViewBag.Cases.CaseId">Case:  @ViewBag.Cases.Title</a>
<br/>
<br/>
<div id = "caseItemContainer">
<input type="hidden" value="/Manager/Cases/SaveItem" id="caseItemSaveUrl"/>
<input type="hidden" value="/Manager/Cases/DeleteItem" id="caseItemDeleteUrl"/>
@foreach(var caseItem in @ViewBag.Cases.CaseItems)
{
	<div class="panel panel-default">
	<input type="hidden" name = "CaseItemId" value = "@caseItem.CaseItemId"/>
	<input type="hidden" name = "CaseId" value = "@caseItem.CaseId"/>
	<div class="panel-heading">
		<div class="col-sm-offset-3">
		   <a href="javascript:void(0);" class="glyphicon glyphicon-save case-item-save">Save</a>
	       <a href="javascript:void(0);" class="glyphicon glyphicon-minus-sign case-item-delete">Delete</a>
       </div>
	</div>
	<div class="panel-body">
		<div class="form-group">
	     <label class="col-sm-2 control-label">Title:</label>
	     <div class="col-sm-10">
	         <input type="text" class="col-sm-10 form-control" name="Title" value="@caseItem.Title"  placeholder="input Title..." />
	     </div>
	    </div>
	
		<div class="form-group">
	    <label class="col-sm-2 control-label">Attachment:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="AttachmentId" value="@caseItem.AttachmentId"  placeholder="input Attachment..." />
	    </div>
	    </div>
	
		<div class="form-group">
	    <label class="col-sm-2 control-label">DisplayOrder:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="DisplayOrder" value="@caseItem.DisplayOrder"  placeholder="input DisplayOrder..." />
	    </div>
	    </div>
	    
	    <div class="form-group">
	    <label class="col-sm-2 control-label">CreateDate:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="CreateDate" value="@caseItem.CreateDate"  placeholder="input CreateDate..." />
	    </div>
	    </div>
	</div>
	</div>
}


