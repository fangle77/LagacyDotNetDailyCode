	     <div class="col-sm-10">
	         <input type="text" class="col-sm-10 form-control" name="Title" value=""  placeholder="input Title..." />
	     </div>
	    </div>
	
		<div class="form-group">
	    <label class="col-sm-2 control-label">Attachment:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="AttachmentId" value=""  placeholder="input Attachment..." />
	    </div>
	    </div>
	
		<div class="form-group">
	    <label class="col-sm-2 control-label">DisplayOrder:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="DisplayOrder" value=""  placeholder="input DisplayOrder..." />
	    </div>
	    </div>
	    
	    <div class="form-group">
	    <label class="col-sm-2 control-label">CreateDate:</label>
	    <div class="col-sm-10">
	        <input type="text" class="col-sm-10 form-control" name="CreateDate" value=""  placeholder="input CreateDate..." />
	    </div>
