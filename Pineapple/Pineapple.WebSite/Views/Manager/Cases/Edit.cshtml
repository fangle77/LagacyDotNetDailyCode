@{
    var cases = @ViewBag.Cases;
    var caseId = cases.CaseId;
    var action = "/Manager/Cases/Save";
    var itemCount = cases.CaseItems==null? 0 : cases.CaseItems.Count;
}
<form id="form1" class="form-horizontal" role="form"  action="@action" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">CaseId:</label>
        <div class="col-sm-10">
            <span>@caseId</span>
            <input type="hidden" name="CaseId" value="@caseId"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Title:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="Title" value="@cases.Title" placeholder="input Title..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">SubTitle:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="SubTitle" value="@cases.SubTitle"  placeholder="input SubTitle..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">CreateDate:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="CreateDate" value="@cases.CreateDate"  placeholder="input CreateDate..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Description:</label>
        <div class="col-sm-10">
            <textarea rows="5" cols="" class="col-sm-10 form-control" name="Description" placeholder="input Description...">@cases.Description</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">DisplayOrder:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="DisplayOrder" value="@cases.DisplayOrder"  placeholder="input DisplayOrder..." />
        </div>
    </div>
     @if(caseId > 0)
	 {
    <div class="form-group">
	    <label class="col-sm-2 control-label">Items:</label>
	    <div class="col-sm-10">
	    @itemCount items.
	    	<a href="/Manager/Cases/EditItems?caseid=@caseId" alt="">Edit items</a>	
	    </div>
    </div>
    }
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
