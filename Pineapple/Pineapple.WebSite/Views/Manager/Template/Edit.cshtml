@{
    var templateView = @ViewBag.TemplateView;
    var template = templateView.Template;
    var action = templateView.IsEmpty ? "/Manager/Template/Create" : "/Manager/Template/Edit/" + template.TemplateId;
    var templateId = templateView.IsEmpty ? "" : template.TemplateId.ToString();
}
<form id="form1" class="form-horizontal" role="form"  action="@action" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">TemplateId:</label>
        <div class="col-sm-10">
            <span>@templateId</span>
            <input type="hidden" name="templateId" value="@templateId"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">TemplateName:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="TemplateName" value="@template.TemplateName" placeholder="input Template Name..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">ViewFile:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="ViewFile" value="@template.ViewFile"  placeholder="input View File..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
