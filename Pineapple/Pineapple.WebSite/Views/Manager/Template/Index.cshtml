@{
    ViewBag.Title = "Templates";
}

<h2>@ViewBag.Title</h2>
<table class="table table-striped table-hover table-bordered">
    <caption>template List (<a href="/Manager/Template/Create" class="glyphicon glyphicon-plus-sign">Add</a>)</caption>
    <thead>
        <tr>
            <th>TemplateId</th>
            <th>TemplateName</th>
            <th>ViewFile</th>
            <th class="width-200">Opration</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var template in @ViewBag.Templates)
    {
        <tr>
            <th>@template.TemplateId</th>
            <th>@template.TemplateName</th>
            <th>@template.ViewFile</th>
            <td>
                <a href="/Manager/Template/Edit/@template.TemplateId" class="glyphicon glyphicon-edit">Edit</a>
                <a href="/Manager/Template/Delete/@template.TemplateId" class="glyphicon glyphicon-minus-sign">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
