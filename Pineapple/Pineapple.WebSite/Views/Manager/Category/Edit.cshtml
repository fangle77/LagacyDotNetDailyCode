@using Pineapple.Model
@{
    var categoryView = @ViewBag.CategoryView;
    var category = categoryView.Category;
    var action = categoryView.IsEmpty ? "/Manager/Category/Create" : "/Manager/Category/Edit/" + category.CategoryId;
    var categoryId = categoryView.IsEmpty ? "" : category.CategoryId.ToString();

    var catalog = (categoryView.Catalogs == null || categoryView.Catalogs.Count == 0) ? new Catalog() : categoryView.Catalogs[0];
}
<form id="form1" class="form-horizontal" role="form"  action="@action" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">CatalogId:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-5 form-control" name="catalogId" value="@catalog.CatalogId" placeholder="input Catalog Id..." />
             <span>@catalog.CatalogName</span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">CategoryId:</label>
        <div class="col-sm-10">
            <span>@categoryId</span>
            <input type="hidden" name="CategoryId" value="@categoryId"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">CategoryName:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="CategoryName" value="@category.CategoryName" placeholder="input Category Name..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">DisplayName:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="DisplayName" value="@category.DisplayName"  placeholder="input Display Name..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">SubDisplayName:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="SubDisplayName" value="@category.SubDisplayName"  placeholder="input SubDisplayName..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Description:</label>
        <div class="col-sm-10">
            <textarea rows="5" cols="" class="col-sm-10 form-control" name="Description" placeholder="input Description...">@category.Description</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">ParentId:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="ParentId" value="@category.ParentId"  placeholder="input ParentId..." />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">DisplayOrder:</label>
        <div class="col-sm-10">
            <input type="text" class="col-sm-10 form-control" name="DisplayOrder" value="@category.DisplayOrder"  placeholder="input DisplayOrder..." />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
